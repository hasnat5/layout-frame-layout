<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow>
        <TextView
            android:id="@+id/TextTable"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:gravity="center"
            android:padding="16dp"
            android:text="Row 3 column 1"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/TextTable2"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="16dp"
            android:text="Row 3 column 2"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/TextTable3"
            android:background="#4F85D6"
            android:gravity="center"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Row 4 Column 3"
            android:textColor="@color/white"/>
    </TableRow>

    <TableRow android:background="@color/black">
        <TextView
            android:id="@+id/TextTable4"
            android:background="#8BC34A"
            android:gravity="center"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Row 5 Column 4"
            android:layout_marginRight="1dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/TextTable5"
            android:background="#8BC34A"
            android:gravity="center"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Row 5 Column 5"
            android:bor
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/TextTable6"
            android:background="#8BC34A"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Row 5 Column 6"
            android:textColor="@color/black"/>
    </TableRow>



</TableLayout>